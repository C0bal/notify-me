<!-- incluir o head -->
<%- include('./partials/head') %>

  <!--Nosso CSS-->
  <link rel="stylesheet" href="/css/principal.css">
</head>

<body>
  <!-- Menu -->
  <%- include('./partials/navbar') %>

  <div class="container">
    <br>
    <% avisos.forEach(aviso => { %>
      <div class="card shadow mt-5">
        <div class="card-header bg-dark text-white pl-5 p-4 d-flex align-items-center justify-content-between">
          <h2><i class="far fa-calendar"></i> <%= aviso.titulo %></h2>
          <span><%= moment(aviso.data).format("DD/MM/YYYY") %></span>
        </div>
        <!--card-header-->
        <div class="card-body p-5">
          <div class="d-flex align-items-center">
            <img src="/images/profile-test.jpg" class="img-thumbnail rounded-circle" width="100px" alt="Profile" >
            <div class="ml-3">
              <div class="font-weight-bold">Administrador</div>
              <div class="text-secondary"><%= moment(aviso.data, "DDMMYYYY").fromNow(); %> </div>
            </div>
          </div>
  
          <!-- descrição do aviso -->
          <div class="mt-4">
            <%= aviso.mensagem %>
          </div>
  
        </div>
        <!--card-body-->
      </div>
      <!--card-->
    <% }) %>
    
    <br><br>
  </div>
  <!--container-->

  <!-- incluir os scripts do bootstrap -->
  <%- include ('./partials/scripts_import') %>
</body>

</html>
