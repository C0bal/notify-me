<!-- incluir o head -->
<%- include('./partials/head.ejs') %>

<body>
  <div class="container">

    <br><br>
    <a href="#"><i class="fas fa-long-arrow-alt-left"></i> Voltar</a>
    <br><br>

    <% if (typeof msg !== 'undefined') { %>
    <% if (msg.tipo ==='sucesso') { %>

    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <strong><i class="far fa-calendar-check"></i> Sucesso! </strong><%=msg.corpo%>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <!--Fim do if sucesso-->
    <% } %> 

    <% if (msg.tipo==='erro'){ %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <strong><i class="fas fa-exclamation-circle"></i> Erro! </strong><%=msg.corpo%>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <!--Fim do if erro-->
    <% } %>

    <!--Fim do typeof-->
    <% } %>

    <br>

    <div class="card shadow">
      <div class="card-header bg-purple text-white pl-5 p-4">
        <h2><i class="far fa-calendar-plus"></i> Novo Aviso</h2>
      </div>
      <!--card-header-->
      <div class="card-body p-5">
        <form action="/avisos/novo" method="POST">
          <div class="form-group">
            <label for="titulo">Titulo</label>
            <input id="titulo" name="titulo" type="text" placeholder="Digite o tÃ­tulo do aviso" class="form-control"
              required>
          </div>
          <div class="form-group">
            <label for="data">Data</label>
            <input id="data" name="data" type="date" class="form-control">
          </div>
          <div class="form-group">
            <label for="mensagem">Mensagem</label>
            <textarea id="mensagem" name="mensagem" placeholder="Descreva o aviso" cols="40" rows="5"
              class="form-control" required></textarea>
          </div>
          <div class="form-group text-right">
            <button name="submit" type="submit" class="btn btn-secondary">Limpar</button>
            <button name="submit" type="submit" class="btn btn-primary">Cadastrar</button>
          </div>
        </form>
      </div>
      <!--card-body-->
    </div>
    <!--card-->
  </div>
  <!--container-->

  <!-- incluir os scripts do bootstrap -->
  <%- include('./partials/scripts_import') %>
</body>

</html>
